[Unit]
Description=Readarr
Documentation=man:podman-systemd.unit(5)
Wants=network-online.target
After=network-online.target

[Container]
ContainerName=readarr
Image={{ containers_images.readarr }}:{{ containers_images_tags.readarr }}
Network=web-egress
Network=common-internal
ExposeHostPort=8787
Volume={{ containers_storage_path }}/data/readarr:/config:Z
Volume={{ nfs_mounts_path }}/downloads:/downloads:slave
Volume={{ nfs_mounts_path }}/medias/books:/books:slave
Timezone={{ timezone }}
Environment="TZ={{ timezone }}"
Label="traefik.enable=true"
Label="traefik.docker.network=common-internal"
Label="traefik.http.routers.readarr.rule=Host(`readarr.{{ domain_name }}`)"
Label="traefik.http.routers.readarr.entrypoints=websecure"
Label="traefik.http.routers.readarr.middlewares=set-security-headers@file, restrict-external-access@file"
Label="traefik.http.services.readarr.loadbalancer.server.port=8787"

[Service]
Restart=on-failure
TimeoutStopSec=70

[Install]
WantedBy=default.target
