[Unit]
Description=IT Tools
Documentation=man:podman-systemd.unit(5)
Wants=network-online.target
After=network-online.target

[Container]
ContainerName=it-tools
Image={{ containers_images.it_tools }}:{{ containers_images_tags.it_tools }}
Network=web-egress
Network=common-internal
ExposeHostPort=80
Timezone={{ timezone }}
Environment="TZ={{ timezone }}"
Label="traefik.enable=true"
Label="traefik.docker.network=common-internal"
Label="traefik.http.routers.it-tools.rule=Host(`tools.{{ domain_name }}`)"
Label="traefik.http.routers.it-tools.entrypoints=websecure"
Label="traefik.http.routers.it-tools.middlewares=set-security-headers@file, it-tools-auth"
Label="traefik.http.middlewares.it-tools-auth.basicauth.users={{ it_tools.user }}:{{ it_tools.password_hash }}"
Label="traefik.http.services.it-tools.loadbalancer.server.port=80"

[Service]
Restart=on-failure
TimeoutStopSec=70

[Install]
WantedBy=default.target
