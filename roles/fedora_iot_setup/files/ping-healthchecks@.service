# https://passbe.com/2022/healthchecks-io-systemd-checks/
[Unit]
Description=Pings Healthchecks (%i)

[Service]
ExecStart=/bin/bash -c 'IFS=: read -r UUID ACTION <<< "%i"; if [ "$ACTION" = "start" ]; then EXIT_CODE="start"; else EXIT_CODE=$MONITOR_EXIT_STATUS; fi && curl -fsS -m 10 --retry 5 -o /dev/null "https://hc-ping.com/$UUID/$EXIT_CODE"'
Type=simple

[Install]
WantedBy=multi-user.target
