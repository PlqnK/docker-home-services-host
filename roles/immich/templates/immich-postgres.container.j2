[Unit]
Description=Immich PostgreSQL
Documentation=man:podman-systemd.unit(5)
Wants=network-online.target
After=network-online.target

[Container]
ContainerName=immich-postgres
Image={{ containers_images.immich.postgres }}:{{ containers_images_tags.immich.postgres }}
Network=immich-postgres-internal
ExposeHostPort=5432
Volume={{ containers_storage_path }}/runtime/immich-postgres:/var/lib/postgresql/data:Z
Volume={{ containers_storage_path }}/data/immich-postgres:/opt/dumps:Z
Secret=immich_postgres_user
Secret=immich_postgres_password
Timezone={{ timezone }}
Environment="TZ={{ timezone }}"
Environment="POSTGRES_DB={{ immich.postgres.database }}"
Environment="POSTGRES_USER_FILE=/run/secrets/immich_postgres_user"
Environment="POSTGRES_PASSWORD_FILE=/run/secrets/immich_postgres_password"
HealthCmd="pg_isready -d {{ immich.postgres.database }} -U {{ immich.postgres.user }}"
HealthInterval=10s
HealthTimeout=3s
HealthRetries=3
Notify=healthy

[Service]
Restart=on-failure
TimeoutStopSec=70

[Install]
WantedBy=default.target
