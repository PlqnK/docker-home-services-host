[Unit]
Description=Overseerr
Documentation=man:podman-systemd.unit(5)
Wants=network-online.target
After=network-online.target

[Container]
ContainerName=overseerr
Image={{ containers_images.overseerr }}:{{ containers_images_tags.overseerr }}
Network=web-egress
Network=common-internal
ExposeHostPort=5055
Volume={{ containers_storage_path }}/data/overseerr:/app/config:Z
Timezone={{ timezone }}
Environment="TZ={{ timezone }}"
Label="traefik.enable=true"
Label="traefik.docker.network=common-internal"
Label="traefik.http.routers.overseerr.rule=Host(`overseerr.{{ domain_name }}`)"
Label="traefik.http.routers.overseerr.entrypoints=websecure"
Label="traefik.http.routers.overseerr.middlewares=set-security-headers@file"
Label="traefik.http.services.overseerr.loadbalancer.server.port=5055"

[Service]
Restart=on-failure
TimeoutStopSec=70

[Install]
WantedBy=default.target
